{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "avatar": {
          "type": [
            "string",
            "null"
          ],
          "default": ""
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "default": "BASIC",
          "enum": [
            "BASIC",
            "AUTHOR",
            "ADMIN"
          ]
        },
        "link": {
          "type": [
            "string",
            "null"
          ]
        },
        "gender": {
          "type": "string",
          "default": "NONE",
          "enum": [
            "NONE",
            "MALE",
            "FEMALE"
          ]
        },
        "emailVerified": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "subscribers": {
          "type": "integer",
          "default": 0
        },
        "about": {
          "type": [
            "string",
            "null"
          ]
        },
        "closedProfile": {
          "type": "boolean",
          "default": false
        },
        "closedSubscribers": {
          "type": "boolean",
          "default": false
        },
        "comments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Comment"
          }
        },
        "accounts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Account"
          }
        },
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Session"
          }
        }
      },
      "required": [
        "email",
        "name",
        "password"
      ]
    },
    "Comment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "reply": {
          "anyOf": [
            {
              "$ref": "#/definitions/Comment"
            },
            {
              "type": "null"
            }
          ]
        },
        "replies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Comment"
          }
        },
        "likes": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "User": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "text",
        "likes",
        "userId"
      ]
    },
    "Account": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "provider": {
          "type": "string"
        },
        "providerAccountId": {
          "type": "string"
        },
        "refresh_token": {
          "type": [
            "string",
            "null"
          ]
        },
        "access_token": {
          "type": [
            "string",
            "null"
          ]
        },
        "expires_at": {
          "type": [
            "integer",
            "null"
          ]
        },
        "token_type": {
          "type": [
            "string",
            "null"
          ]
        },
        "scope": {
          "type": [
            "string",
            "null"
          ]
        },
        "id_token": {
          "type": [
            "string",
            "null"
          ]
        },
        "session_state": {
          "type": [
            "string",
            "null"
          ]
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "userId",
        "type",
        "provider",
        "providerAccountId"
      ]
    },
    "Session": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "sessionToken": {
          "type": "string"
        },
        "expires": {
          "type": "string",
          "format": "date-time"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "sessionToken",
        "userId",
        "expires"
      ]
    },
    "VerificationToken": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "identifier": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "expires": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "identifier",
        "token",
        "expires"
      ]
    }
  },
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/definitions/User"
    },
    "comment": {
      "$ref": "#/definitions/Comment"
    },
    "account": {
      "$ref": "#/definitions/Account"
    },
    "session": {
      "$ref": "#/definitions/Session"
    },
    "verificationToken": {
      "$ref": "#/definitions/VerificationToken"
    }
  }
}